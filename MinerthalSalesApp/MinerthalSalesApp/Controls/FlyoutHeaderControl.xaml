<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    x:Class="MinerthalSalesApp.Controls.FlyoutHeaderControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="20">
    <StackLayout Orientation="Horizontal" Spacing="10">
        <Label
            x:Name="lblUserName"
            FontAttributes="Bold"
            FontSize="13"
            Text="{Binding LblUserName}" />
        <!--<Label VerticalTextAlignment="Center" FontAttributes="Bold" x:Name="lblUserRole" FontSize="16" />-->
    </StackLayout>
    <Label
        x:Name="lblUserCodigo"
        FontSize="11"
        Text="{Binding LblUserCodigo}" />
</StackLayout>