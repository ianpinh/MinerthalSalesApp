<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MinerthalSalesApp.Views.Clients.ClientsPageDetail"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:handlers="clr-namespace:MinerthalSalesApp.Handlers"
    xmlns:views="clr-namespace:MinerthalSalesApp.Views.Clients"
    Title="Dados do cliente">
    <!--<Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}" IconOverride="button_ok_mini.png" />
    </Shell.BackButtonBehavior>-->
    <ScrollView>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Margin="0,50,0,32"
                    FontFamily="MontSerratBold"
                    HorizontalTextAlignment="Center"
                    Text="Gerais"
                    TextColor="{DynamicResource PrimaryDarkColor}"
                    VerticalOptions="End"
                    VerticalTextAlignment="End" />
                <Button
                    x:Name="BtnGerais"
                    Grid.Column="0"
                    Margin="5,-30,5,0"
                    Padding="0,-12,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="#5d5d5d"
                    BorderWidth="4"
                    Clicked="BtnGerais_Clicked"
                    ContentLayout="left, 0"
                    HeightRequest="70"
                    HorizontalOptions="Center"
                    ImageSource="documentation.png"
                    TextColor="{AppThemeBinding Light=black,
                                                Dark=white}"
                    VerticalOptions="Center"
                    WidthRequest="95" />

                <Label
                    Grid.Column="1"
                    Margin="0,10,0,32"
                    FontFamily="MontSerratBold"
                    HorizontalTextAlignment="Center"
                    Text="Outros"
                    TextColor="{DynamicResource PrimaryDarkColor}"
                    VerticalOptions="End"
                    VerticalTextAlignment="Start" />
                <Button
                    x:Name="BtnOutros"
                    Grid.Column="1"
                    Margin="5,-30,5,0"
                    Padding="0,-12,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="#eee"
                    BorderWidth="1"
                    Clicked="BtnOutros_Clicked"
                    ContentLayout="left, 0"
                    CornerRadius="10"
                    HeightRequest="70"
                    HorizontalOptions="Center"
                    ImageSource="financial.png"
                    TextColor="{AppThemeBinding Light=black,
                                                Dark=white}"
                    VerticalOptions="Center"
                    WidthRequest="95" />

                <Label
                    Grid.Column="2"
                    Margin="0,10,0,32"
                    FontFamily="MontSerratBold"
                    HorizontalTextAlignment="Center"
                    Text="Financeiro"
                    TextColor="{DynamicResource PrimaryDarkColor}"
                    VerticalOptions="End"
                    VerticalTextAlignment="Start" />
                <Button
                    x:Name="BtnFinanceiro"
                    Grid.Column="2"
                    Margin="5,-30,5,0"
                    Padding="0,-12,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="#eee"
                    BorderWidth="1"
                    Clicked="BtnFinanceiro_Clicked"
                    ContentLayout="left, 0"
                    HeightRequest="70"
                    HorizontalOptions="Center"
                    ImageSource="investment.png"
                    TextColor="{AppThemeBinding Light=black,
                                                Dark=white}"
                    VerticalOptions="Center"
                    WidthRequest="95" />


                <Label
                    Grid.Column="3"
                    Margin="0,10,0,32"
                    FontFamily="MontSerratBold"
                    HorizontalTextAlignment="Center"
                    Text="Títulos"
                    TextColor="{DynamicResource PrimaryDarkColor}"
                    VerticalOptions="End"
                    VerticalTextAlignment="Start" />
                <Button
                    x:Name="BtnTitulo"
                    Grid.Column="3"
                    Margin="5,-30,5,0"
                    Padding="0,-12,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="#eee"
                    BorderWidth="1"
                    Clicked="BtnTitulo_Clicked"
                    ContentLayout="left, 0"
                    HeightRequest="70"
                    HorizontalOptions="Center"
                    ImageSource="privacy_policy.png"
                    TextColor="{AppThemeBinding Light=black,
                                                Dark=white}"
                    VerticalOptions="Center"
                    WidthRequest="95" />
            </Grid>
            <ContentView
                x:Name="detailsview"
                IsVisible="true"
                VerticalOptions="StartAndExpand">
                <AbsoluteLayout Margin="20" VerticalOptions="StartAndExpand">
                    <BoxView AbsoluteLayout.LayoutBounds="-10, -48, 80, 2" Color="Silver" />
                    <Grid Margin="1,-35,1,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  CÓDIGO  -->
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,10"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Código" />

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ddd"
                            StrokeShape="RoundRectangle 3,3,3,3">
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="5,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.A1Cod}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  RAZÃO SOCIAL  -->
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Razão Social" />
                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.A1Nome}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  NOME FANTASIA  -->
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Nome Fantasia"
                            WidthRequest="100" />
                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.A1Nreduz}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  BLOQUEADO  -->
                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Bloqueado"
                            WidthRequest="100" />
                        <Border
                            Grid.Row="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="3"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text=""
                                WidthRequest="265" />
                        </Border>

                        <!--  PLANO PAGAMENTO  -->
                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Plano Pagto"
                            WidthRequest="100" />
                        <Border
                            Grid.Row="4"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="4"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text=""
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  TIPO COBRANÇA  -->
                        <Label
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Tipo Cobrança"
                            WidthRequest="100" />
                        <Border
                            Grid.Row="5"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="5"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text=""
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  FISICA / JURIDICA  -->
                        <Label
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Física / Jurídica"
                            WidthRequest="100" />

                        <Border
                            Grid.Row="6"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="6"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.Tipo}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  CPF/ CNPJ  -->
                        <Label
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="CPF / CNPJ"
                            WidthRequest="100" />
                        <Border
                            Grid.Row="7"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="7"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.CNPJFormatado}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  INSCRIÇÃO ESTADUAL  -->
                        <Label
                            Grid.Row="8"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Insc. Estadual"
                            WidthRequest="100" />
                        <Border
                            Grid.Row="8"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3" />
                        <Label
                            Grid.Row="8"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Padding="2,5,0,5"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="{Binding Cliente.A1Inscr}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            WidthRequest="265" />


                        <!--  OBSERVAÇÕES  -->
                        <Label
                            Grid.Row="9"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Observações"
                            WidthRequest="100" />
                        <Border
                            Grid.Row="9"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="9"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                HeightRequest="150"
                                Text="{Binding Cliente.A1Observ}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  BOTTOM BUTTONS  -->

                        <Label
                            Grid.Row="11"
                            Grid.Column="0"
                            Margin="-6,110,0,32"
                            FontFamily="MontSerratBold"
                            FontSize="12"
                            HorizontalOptions="Start"
                            HorizontalTextAlignment="Center"
                            Text="Novo Pedido"
                            TextColor="{DynamicResource PrimaryDarkColor}"
                            VerticalTextAlignment="End" />
                        <Button
                            x:Name="BtnNovoPedido"
                            Grid.Row="11"
                            Grid.Column="0"
                            Margin="-11,30,5,0"
                            Padding="0,-12,0,0"
                            BackgroundColor="Transparent"
                            BorderColor="#eee"
                            BorderWidth="1"
                            Clicked="BtnNovoPedido_clicked"
                            CommandParameter="{Binding Cliente.A1Cod}"
                            ContentLayout="left, 0"
                            HeightRequest="70"
                            HorizontalOptions="Start"
                            ImageSource="neworder.png"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}"
                            VerticalOptions="Center"
                            WidthRequest="80" />

                        <Label
                            Grid.Row="11"
                            Grid.Column="1"
                            Margin="-30,110,0,32"
                            FontFamily="MontSerratBold"
                            FontSize="12"
                            HorizontalTextAlignment="Center"
                            Text="Visitas"
                            TextColor="{DynamicResource PrimaryDarkColor}"
                            VerticalOptions="End"
                            VerticalTextAlignment="End" />
                        <Button
                            x:Name="BtnVisitas"
                            Grid.Row="11"
                            Grid.Column="1"
                            Margin="-13,30,5,0"
                            Padding="0,-12,0,0"
                            BackgroundColor="Transparent"
                            BorderColor="#eee"
                            BorderWidth="1"
                            Clicked="BtnVisitas_Clicked"
                            ContentLayout="left, 0"
                            HeightRequest="70"
                            HorizontalOptions="Start"
                            ImageSource="visitas.png"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}"
                            VerticalOptions="Center"
                            WidthRequest="80" />

                        <Label
                            Grid.Row="11"
                            Grid.Column="2"
                            Margin="-15,110,0,32"
                            FontFamily="MontSerratBold"
                            FontSize="12"
                            HorizontalTextAlignment="Center"
                            Text="Checklist"
                            TextColor="{DynamicResource PrimaryDarkColor}"
                            VerticalOptions="End"
                            VerticalTextAlignment="End" />
                        <Button
                            x:Name="BtnCheckList"
                            Grid.Row="11"
                            Grid.Column="2"
                            Margin="-6,30,5,0"
                            Padding="0,-12,0,0"
                            BackgroundColor="Transparent"
                            BorderColor="#eee"
                            BorderWidth="1"
                            ContentLayout="left, 0"
                            HeightRequest="70"
                            HorizontalOptions="Start"
                            ImageSource="checklist.png"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}"
                            VerticalOptions="Center"
                            WidthRequest="80" />

                        <Label
                            Grid.Row="11"
                            Grid.Column="3"
                            Margin="-10,100,0,30"
                            FontFamily="MontSerratBold"
                            FontSize="12"
                            HorizontalTextAlignment="Center"
                            Text="Histórico"
                            TextColor="{DynamicResource PrimaryDarkColor}"
                            VerticalOptions="Center"
                            VerticalTextAlignment="Center" />
                        <Button
                            x:Name="BtnHistorico"
                            Grid.Row="11"
                            Grid.Column="3"
                            Margin="0,30,5,0"
                            Padding="0,-12,0,0"
                            BackgroundColor="Transparent"
                            BorderColor="#eee"
                            BorderWidth="1"
                            Clicked="BtnHistorico_Clicked"
                            CommandParameter="{Binding Cliente.NumCodLoja}"
                            ContentLayout="left, 0"
                            HeightRequest="70"
                            HorizontalOptions="Start"
                            ImageSource="historico.png"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}"
                            VerticalOptions="Center"
                            WidthRequest="80" />



                    </Grid>
                </AbsoluteLayout>
            </ContentView>
            <ContentView x:Name="historyview" IsVisible="false">
                <AbsoluteLayout Margin="20">
                    <BoxView AbsoluteLayout.LayoutBounds="87, -48, 80, 2" Color="Silver" />
                    <Grid Margin="1,-35,1,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  TELEFONE  -->
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,10"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Telefone"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}" />

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.Telefone}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  CELULAR  -->
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Celular"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}" />

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text=""
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  EMAIL  -->
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="E-mail"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}"
                            WidthRequest="100" />

                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.A1Email}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  CIDADE  -->
                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Cidade"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}"
                            WidthRequest="100" />

                        <Border
                            Grid.Row="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="3"
                                Grid.Column="1"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.A1Mune}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  ENDEREÇO  -->
                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Padding="2,5,0,5"
                            FontSize="12"
                            Text="Endereço"
                            TextColor="{AppThemeBinding Light=black,
                                                        Dark=white}"
                            WidthRequest="100" />

                        <Border
                            Grid.Row="4"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Margin="0,0,0,5"
                            Padding="3,0,0,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Stroke="#ccc"
                            StrokeShape="RoundRectangle 3,3,3,3">

                            <Label
                                Grid.Row="4"
                                Grid.Column="1"
                                Padding="2,5,0,5"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Cliente.A1Endent}"
                                TextColor="{AppThemeBinding Dark=White,
                                                            Light=Black}"
                                WidthRequest="265" />
                        </Border>

                        <!--  BAIRRO  -->
